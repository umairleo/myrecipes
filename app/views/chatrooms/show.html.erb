<%= render 'shared/page_title', title: "ChefChat" %>

<div class="row chat-container">
  <div class="col-md-8 center-block">
    <div class="messages" id="messages">
      <%= render @messages %>
    </div>
    <hr />
    <div class="message-container">
      <%= form_for(@message, :html => {class: "form-horizontal", 
                                  role: "form"}) do |f| %>
        <%= f.text_area :content, class: "form-control", data:{behaviour: "room_speaker"},placeholder: "Say something!" %>
        <%= f.submit "Send", class: 'btn btn-primary', data: {send: "message"} %>
      <% end %>
    </div>    
  </div>
</div>
